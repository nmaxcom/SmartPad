{
  "name": "smartpad",
  "version": "1.0.0",
  "description": "> A text-based web application that combines the simplicity of a plain text editor with the power of real-time mathematical interpretation and calculation.",
  "main": "src/index.ts",
  "scripts": {
    "dev": "node scripts/npm_run_dev_server_check.js",
    "build": "vite build",
    "preview": "vite preview",
    "test": "npm run test:unit",
    "test:unit": "jest",
    "test:browser": "cucumber-js --config cucumber.config.js tests/features/browser-critical.feature",
    "test:full": "npm run test:unit && npm run test:browser && npm run test:e2e",
    "test:bdd": "cucumber-js --config cucumber.config.js",
    "test:e2e": "playwright test --project=chromium --config=playwright.config.ts",
    "test:visual": "playwright test --project=visual-tests --config=playwright.config.ts",
    "test:visual:update": "playwright test --project=visual-tests --update-snapshots --config=playwright.config.ts",
    "generate-syntax-docs": "tsx scripts/generate-syntax-docs.ts",
    "docs:web:build": "node scripts/generate-web-docs.js",
    "docs:docusaurus:generate": "node scripts/generate-docusaurus-docs.js",
    "docs:docusaurus:dev": "npm --prefix website run start",
    "docs:docusaurus:build": "DOCS_BASE_URL=/docs/ DOCS_SITE_URL=http://localhost:3000 npm --prefix website run build",
    "docs:docusaurus:build:prod": "DOCS_BASE_URL=/SmartPad/docs/ DOCS_SITE_URL=https://nmaxcom.github.io npm --prefix website run build",
    "docs:docusaurus:sync": "node scripts/sync-docusaurus-build.js",
    "docs:docusaurus:publish-local": "npm run docs:docusaurus:generate && npm run docs:docusaurus:build && npm run docs:docusaurus:sync",
    "docs:docusaurus:publish-prod": "npm run docs:docusaurus:generate && npm run docs:docusaurus:build:prod && npm run docs:docusaurus:sync",
    "docs:review": "node scripts/docs-review.js",
    "docs:drift": "node scripts/docs-drift-check.js",
    "docs:map": "node scripts/spec-map-coverage-check.js",
    "spec:test": "node scripts/spec-test-sync-check.js"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nmaxcom/SmartPad.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nmaxcom/SmartPad/issues"
  },
  "homepage": "https://github.com/nmaxcom/SmartPad#readme",
  "dependencies": {
    "@testing-library/dom": "^10.0.0",
    "@tiptap/core": "^2.7.0",
    "@tiptap/extension-placeholder": "^2.14.0",
    "@tiptap/pm": "^2.14.0",
    "@tiptap/react": "^2.14.0",
    "@tiptap/starter-kit": "^2.14.0",
    "@types/mathjs": "^9.4.1",
    "jszip": "^3.10.1",
    "luxon": "^3.7.2",
    "mathjs": "^14.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "unitsnet-js": "^1.0.0"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^11.3.0",
    "@playwright/test": "^1.58.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.15.30",
    "@types/react": "^18.2.66",
    "@types/react-dom": "^18.2.22",
    "@typescript-eslint/eslint-plugin": "^8.33.1",
    "@typescript-eslint/parser": "^8.33.1",
    "@vitejs/plugin-react": "^4.2.1",
    "chai": "^5.2.0",
    "eslint": "^9.28.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.1.1",
    "jsdom": "^26.1.0",
    "nerdamer": "^1.1.13",
    "prettier": "^3.5.3",
    "ts-jest": "^29.4.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.1",
    "vite": "^5.4.19"
  }
}
